<h3>New comment</h3>
<%= form_for [@article, @article.comments.build] do |f| %>
  <div class="form-group">
    <div class="col-sm-2">
      <%= f.label :text, class: 'control-label' %>
    </div>
    <div class="col-sm-10">
      <%= f.text_area :text, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-default' %>
    </div>
  </div>
<% end %>


